<div class="background-base p-5">
  <div class="rounded-lg bg-gray-200 lg:w-1/4 m-auto shadow-md">
    <div class="rounded bg-gray-600 shadow-xl">
      <h2 class="text-white"><%= t('.sign_up') %></h2>
    </div>
    <div class="p-2 shadow-inner">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="mb-2">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="mb-2">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="mb-2">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div>
          <%= f.submit t('.sign_up'), class: "btn-base" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="my-3">
    <%= render "devise/shared/links" %>
  </div>
</div>
