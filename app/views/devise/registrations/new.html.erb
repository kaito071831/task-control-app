<div class="h-full text-center bg-gray-300 p-5">
  <div class="border-solid border-2 border-black bg-gray-200 lg:w-1/4 sm:w-0 m-auto">
    <div class="border-solid border-1 border-black bg-gray-600">
      <h2 class="text-white"><%= t('.sign_up') %></h2>
    </div>
    <div class="p-2">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="mb-2">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="mb-2">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="mb-2">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div>
          <%= f.submit t('.sign_up'), class: "border-none rounded bg-gray-800 text-white p-1 my-2" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="my-3">
    <%= render "devise/shared/links" %>
  </div>
</div>
