<div class="background-base p-5">
  <div class="rounded-lg bg-gray-200 lg:w-1/4 m-auto shadow-md">
    <div class="rounded bg-gray-600 shadow-xl">
      <h2 class="text-white"><%= t('.forgot_your_password') %></h2>
    </div>
    <div class="p-2 shadow-inner">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="mb-2">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div>
          <%= f.submit t('.send_me_reset_password_instructions'), class: "btn-base" %>
        </div>
      <% end %>    
    </div>
  </div>
  <div class="my-3">
    <%= render "devise/shared/links" %>
  </div>
</div>
