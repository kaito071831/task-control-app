<header>
  <nav class="p-4 bg-cyan-600 bg-opacity-75 shadow-xl">
    <div class="block lg:flex justify-between text-center">
      <div><%= link_to 'Taskcontrol', root_path, class: "text-3xl" %></div>
      <div class="block lg:flex lg:items-center lg:space-x-2">
        <% if user_signed_in? %>
          <div><%= link_to current_user.email, boardgroup_index_path %></div>
          <div><%= link_to 'プロフィール変更', edit_user_registration_path, class: "block border-solid border-2 border-indigo-600 bg-indigo-200 px-4 py-2 rounded-full w-full lg:w-auto" %></div>
          <div><%= button_to 'ログアウト', destroy_user_session_path, class: "block border-solid border-2 border-indigo-600 bg-indigo-200 px-4 py-2 rounded-full w-full lg:w-auto", method: :delete %></div>
        <% else %>
          <div><%= link_to 'サインアップ', new_user_registration_path, class: "block border-solid border-2 border-indigo-600 bg-indigo-200 px-4 py-2 rounded-full w-full lg:w-auto" %></div>
          <div><%= link_to 'ログイン', new_user_session_path, class: "block border-solid border-2 border-indigo-600 bg-indigo-200 px-4 py-2 rounded-full w-full lg:w-auto" %></div>
        <% end %>
      </div>
    </div>
  </nav>
</header>
